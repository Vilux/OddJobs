@model WebSecurityAssignment.Data.Ratings

@{
    ViewData["Title"] = "Create";
}

<h2>Rate @Html.Raw(@ViewBag.EmployeeName)'s work</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="display:none">
                <label asp-for="employeeID" class="control-label"></label>
                <select asp-for="employeeID" class="form-control" asp-items="ViewBag.ApplicantID"></select>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="jobID" class="control-label"></label>
                <select asp-for="jobID" class="form-control" asp-items="ViewBag.jobID"></select>
                
            </div>
            <div class="form-group">
                Score (1 - 5)
                <input asp-for="score" class="form-control" />
                <span asp-validation-for="score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="review" class="control-label"></label>
                <input asp-for="review" class="form-control" />
                <span asp-validation-for="review" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
