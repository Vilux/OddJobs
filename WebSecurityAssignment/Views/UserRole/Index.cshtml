@model IEnumerable<WebSecurityAssignment.ViewModels.UserVM>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("View Roles", "Detail", new { userName = item.Email }) |
                @Html.ActionLink("Delete", "DeleteUser", new { userName = item.Email })
            </td>
        </tr>
}
    </tbody>
</table>
