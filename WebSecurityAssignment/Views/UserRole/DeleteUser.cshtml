@model WebSecurityAssignment.ViewModels.UserVM

@{
    ViewData["Title"] = "DeleteUser";
}

<h2>Delete User</h2>

<h3>Are you sure you want to delete this?</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="DeleteUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <!-- This shows the label. -->
                <label asp-for="Email" class="control-label"></label>

                <!-- Drop down for List of strings with user selected. -->
                @Html.DropDownList("Email",
                    new SelectList(ViewBag.UserSelectList, "Value", "Text",
                                   ViewBag.SelectedUser),
                    "Select User",
                    new { @id = "userDD", @class = "form-control" })

                <!-- This shows validation for dropdown of 'Email' property. -->
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
