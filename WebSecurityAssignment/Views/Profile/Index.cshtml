@model IEnumerable<WebSecurityAssignment.ViewModels.JobVM>

@{
    Layout = "/Views/Shared/_Layout.cshtml"; ;
}

<h2>Manage your account</h2>

<div>
    <h4>Change your account settings</h4>
    <hr />
    <div class="row">
        <div class="col-md-3">
            <ul class="nav nav-pills nav-stacked">
                <li><a href="/Profile/Applications">Applications</a></li>
                <li><a href="/Profile/Jobs">Jobs</a></li>
                <li><a href="/Profile"
                       style="
                            background-color: rgb(51, 122, 183);
                            border-radius: 4px;
                            box-sizing: border-box;
                            color: rgb(255, 255, 255);
                            ">Listings</a></li>
                <li><a href="/Identity/Account/Manage">Profile</a></li>
                <li><a id="change-password" asp-page="/Identity/Account/Manage/ChangePassword">Password</a></li>

            </ul>
        </div>
        <div class="col-md-9">
            <p>
                <a asp-controller="Jobs" asp-action="Create">Create New</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            Employee
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Amount)
                        </th>
                        <th>
                            Job Date
                        </th>
                        <th>
                            Available Until
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Address)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmployeeName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.dateNeeded)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.dateExpired)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                @if (@item.employeeID == null) {
                                <a asp-controller="Applications" asp-action="Get" asp-route-id="@item.ID">Pending Applications</a>
                                }

                                <a asp-controller="Jobs" asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                                <a asp-controller="Jobs" asp-action="Details" asp-route-id="@item.ID">Details</a> |
                                <a asp-controller="Jobs" asp-action="Delete" asp-route-id="@item.ID">Delete</a> |

                                @if (@item.employeeID != null) { 
                                    <a asp-controller="Transactions" asp-action="Create" asp-route-id="@item.ID">Pay</a>
                                }

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>




