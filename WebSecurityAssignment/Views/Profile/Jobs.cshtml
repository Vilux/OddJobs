@model IEnumerable<WebSecurityAssignment.ViewModels.JobVM>

@{
    Layout = "/Areas/Identity/Pages/_Layout.cshtml";
}

<h2>Manage your account</h2>

<div>
    <h4>Change your account settings</h4>
    <hr />
    <div class="row">
        <div class="col-md-3">
            <ul class="nav nav-pills nav-stacked">
                <li><a href="/Profile/Applications">Applications</a></li>
                <li>
                    <a href="/Profile/Jobs"
                       style="
                        background-color: rgb(51, 122, 183);
                        border-radius: 4px;
                        box-sizing: border-box;
                        color: rgb(255, 255, 255);
                       ">Jobs</a>
                </li>
                <li><a href="/Profile">Listings</a></li>
                <li><a href="/Identity/Account/Manage">Profile</a></li>
                <li><a href="/Identity/Account/Manage/ChangePassword">Password</a></li>

                <li><a href="/Identity/Account/Manage/TwoFactorAuthentication">Two-factor authentication</a></li>
                <li><a href="/Identity/Account/Manage/PersonalData">Personal data</a></li>
            </ul>
        </div>
        <div class="col-md-9">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Job Title
                        </th>
                        <th>
                            Job Description
                        </th>
                        <th>
                            Employee
                        </th>
                        <th>
                            Amount
                        </th>
                        <th>
                            Job Date
                        </th>
                        <th>
                            Available Until
                        </th>
                        <th>
                            Address
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmployeeName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.dateNeeded)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.dateExpired)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>                           
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>