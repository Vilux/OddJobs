@model IEnumerable<WebSecurityAssignment.Data.Job>

@{
    ViewData["Title"] = "Index";
}
<div>
    <section class="job_feed">
        <div id="feed_list">
            <h2>Job Listings</h2>

            <p>
                <a asp-action="Create">Create New</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.title)
                        </th>                    
                        <th>
                            @Html.DisplayNameFor(model => model.employeeID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.amount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.dateNeeded)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.dateExpired)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Address)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.employeeID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.dateNeeded)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.dateExpired)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address.addressID)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.jobID">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.jobID">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.jobID">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div id="feed_details">

            <section id="details">
                <h3>Mow my lawn</h3>
                <p>
                    Need my lawn mowed since I hurt my back and cant push the mower anymore.
                    Should take no longer than afew hours
                </p>
                <p>Start Date: Anytime </p>
                <p>Complete by: Febuary 30th 2019</p>
                <p>Location: <a>1234 Jeggins Ave. Cooltown</a></p>
                <p>Posted by: <a>biglawnbrian</a></p>
                <section id="map_container">
                    <span class="metadata-marker" style="display: none;" data-region_tag="html-body"></span>
                    <div id="map"></div>
                    <script>
                        //<span class="metadata-marker" style="display: none;" data-region_tag="script-body"></span>
                        var map;
                        function initMap() {
                            map = new google.maps.Map(document.getElementById('map'), {
                                center: { lat: -34.397, lng: 150.644 },
                                zoom: 8
                            });
                        }
                    </script>
                    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD8owFdPbt2-OK8FLSbhSfZe7qry90ptOA&callback=initMap"
                            async defer></script>
                </section>
            </section>
            <button class="apply_button">Apply</button>
        </div>
    </section>
</div>